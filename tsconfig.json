{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "node",
      "@cloudflare/workers-types",
    ],
    "baseUrl": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts",
  ]
}